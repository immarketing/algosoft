#ifndef __ExtFpCO_VIH
#define __ExtFpCO_VIH

#ifdef  ComponentVersion
#component "F_FpCatalog"
#endif //ComponentVersion

#doc
Интерфейс взаимодейсвтия с каталогом ЦО
#end
ObjInterface IExtFpCO;

//==============================================================================
//                                  INIT
//------------------------------------------------------------------------------
//------------------------------------------------------------------------------
#doc
   Функция перегрузки таблицы в памяти каталога ЦО
#end
Function RetrieveTbl : boolean;

//==============================================================================
//                               FIELDS (Get)
//------------------------------------------------------------------------------
//------------------------------------------------------------------------------
#doc
   Функция возвращает код сортировки ЦО во всей иерархии
#end
Function GetCode    (_cRec : comp) : string;

//------------------------------------------------------------------------------
#doc
   Функция возвращает наименование ЦО
#end
Function GetName    (_cRec : comp) : string;

//------------------------------------------------------------------------------
#doc
   Функция возвращает ссылку на вышестоящий ЦО
#end
Function GetNode    (_cRec : comp) : comp;

//==============================================================================
//                                  DIALOG
//------------------------------------------------------------------------------
//------------------------------------------------------------------------------
#doc
   Функция возвращает имя маркера для каталога ЦО
#end
//------------------------------------------------------------------------------
Function GetMarkerName : string;

//------------------------------------------------------------------------------
#doc
   Функция запуска окна выбора/редактирования каталога ЦО
#end
Function RunViewCO(
    _wIntMode : word;  // режим запуска (cgiNo, cgiPick, ...) см.GLOCONST.INC
    _cNodeTop : comp;  // вывод только ветки с вершиной cNodeTop, чтобы все дерево cNodeTop=comp(0)
var _cGetRec  : comp   // выбранный ЦО
) : integer;

//------------------------------------------------------------------------------
//------------------------------------------------------------------------------
end; // IExtFpCO

VipInterface vExtFpCO implements IExtFpCO
#Licensed_Free
; // VipInterface vExtFpCO

#endif  // __ExtFpCO_VIH
