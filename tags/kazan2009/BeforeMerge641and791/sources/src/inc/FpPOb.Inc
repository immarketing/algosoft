type TLiteBuffFpOborot = record
    Nrec           : Comp;                 // "номер записи"
    DESCR          : String[20];           // дескриптор к номеру документа
    DESGR          : String[4];            // код группы пользователей
    DATOB          : Date;                 // Дата операции
    NODOC          : String[20];           // Номер документа
    TIDKGAL        : Word;                 // Тип документа системный
    TIDK           : Word;                 // Тип первичного документа
    CSOPRDOC       : Comp;                 // Ссылка на первичный документ
    CSOPRHOZ       : Comp;                 // Ссылка на журнал ТХО
    CPLANSSCH      : Comp;                 // Ссылка на регистр учета
    KODREG         : Word;                 // Код регистра учета
    CPERIOD        : Comp;                 // Ссылка на период планирования
    CCO            : Comp;                 // Ссылка на центр ответственности
    CCOKOR         : Comp;                 // ЦО-корреспондент по операции
    CSTBUD         : Comp;                 // Ссылка на статью бюджета
    CHOZOPER       : Comp;                 // Ссылка на каталог ТХО
    SUMMA          : Double;               // Сумма операции в НДЕ
    SUMVAL         : Double;               // Сумма операции в валюте
    CVAL           : Comp;                 // Код валюты операции
    KOL            : Double;               // Количество по операции
    CED            : Comp;                 // Ссылка на единицу измерения
    NAME           : String[80];           // Содержание операции
    DDOC           : Date;                 // Дата документа <для сортировки>
    WDOCSP         : Word;                 // Тип спецификации
    CDOCSP         : Comp;                 // Ссылка на спецификацию ДО
    CHASHDOC       : Comp;                 // Аналитика документа
    CHASHBUD       : Comp;                 // Аналитика статьи бюджета
end;
