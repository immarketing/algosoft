{

 if (not ReadMyDsk(sPath  ,'8dsksPath1',isError))  sPath := '';
 if (not ReadMyDsk(cPlan1 ,'8dsksPath4',isError))  cPlan1:=0; 
 if (not ReadMyDsk(cPlan2 ,'8dsksPath5',isError))  cPlan2:=0; 
